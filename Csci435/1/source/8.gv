digraph graph_path {
	//Draw the graph from left to right.
	rankdir=LR;
	
	
	
	//Reset node style for future nodes
	node [style=solid];
	node [shape=circle];

	//You don't need to declare additional nodes,
	//just use them.
	1 -> 2[dir=none];
	1-> 3 [dir=none penwidth = 3];
	1->4 [dir=none penwidth = 3];
	2->3 [dir=none];	
	2->4 [dir=none];
	
}